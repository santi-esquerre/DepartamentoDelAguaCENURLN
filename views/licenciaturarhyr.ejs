<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <title><%- titulo_pagina %></title>
    <meta name="description" content="" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/css/style.css" />
  </head>
  <body>
    <header>
      <nav class="navbar navbar-expand-lg fixed-top shadow" id="nav"></nav>
    </header>

    <main>
      <!-- Sección Principal -->
      <section
        class="hero-section vh-100 d-flex align-items-center text-white position-relative"
        style="<% if (seccion_principal.imagen_fondo) { %> 
           background: url('<%- seccion_principal.imagen_fondo %>') no-repeat center center/cover; 
         <% } else { %> 
           background-color: #343a40; /* Gris oscuro de Bootstrap */
         <% } %>"
      >
        <!-- Capa de superposición oscura (solo si hay imagen de fondo) -->
        <% if (seccion_principal.imagen_fondo) { %>
        <div
          class="position-absolute top-0 start-0 w-100 h-100 bg-dark opacity-50"
        ></div>
        <% } %>

        <div class="container text-center position-relative">
          <h1><%- seccion_principal.titulo %></h1>
          <p>
            <b><%- seccion_principal.subtitulo %></b> <%-
            seccion_principal.descripcion %>
          </p>
          <a href="#estructura" class="btn btn-primary">Saber más...</a>
        </div>
      </section>

      <!-- Datos de la Carrera -->
      <section class="estructura py-2">
        <div class="container">
          <div class="card">
            <div class="card-header">
              <h3 class="text-primary"><%- estructura.titulo %></h3>
            </div>
            <ul class="list-group list-group-flush">
              <% estructura.datos.forEach(dato => { %>
              <li class="list-group-item">
                <b><%- dato.etiqueta %>:</b> <%- dato.valor %>
              </li>
              <% }); %>
            </ul>
            <div
              class="ratio ratio-16x9"
              style="max-height: 315px; overflow: hidden"
            >
              <iframe
                src="<%- estructura.video %>"
                title="YouTube video player"
                frameborder="0"
                allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
                referrerpolicy="strict-origin-when-cross-origin"
                allowfullscreen
                class="rounded-bottom"
              >
              </iframe>
            </div>
          </div>
        </div>
      </section>

      <!-- Secciones Expansibles (Acordeón) -->
      <section class="secciones-expansibles py-2">
        <div class="container">
          <ul class="accordion list-group" id="secciones_lista">
            <% secciones.forEach(seccion => { %>
            <li class="accordion-item list-group-item p-0 m-0">
              <div class="accordion-header">
                <button
                  class="accordion-button bg-light"
                  type="button"
                  data-bs-toggle="collapse"
                  data-bs-target="#<%- seccion.id %>"
                >
                  <h4 class="text-primary"><%- seccion.titulo %></h4>
                </button>
              </div>
              <div
                id="<%- seccion.id %>"
                class="accordion-collapse collapse"
                data-bs-parent="#secciones_lista"
              >
                <div class="accordion-body">
                  <p><%- seccion.contenido %></p>
                  <% if (seccion.enlaces) { %>
                  <hr />
                  <div class="dropdown">
                    <button
                      class="btn btn-primary dropdown-toggle"
                      type="button"
                      data-bs-toggle="dropdown"
                    >
                      Más Información
                    </button>
                    <ul class="dropdown-menu">
                      <% seccion.enlaces.forEach(enlace => { %>
                      <li>
                        <a class="dropdown-item" href="<%- enlace.url %>"
                          ><%- enlace.texto %></a
                        >
                      </li>
                      <% }); %>
                    </ul>
                  </div>
                  <% } %>
                </div>
              </div>
            </li>
            <% }); %>
          </ul>
        </div>
      </section>

      <!-- Malla Curricular -->
      <section class="malla-curricular py-2">
        <div class="container">
          <div class="card">
            <div class="card-header">
              <h3 class="text-primary">Malla Curricular Interactiva</h3>
            </div>
            <div class="card-body">
              <p><%- malla.descripcion %></p>
              <a href="<%- malla.enlace %>" class="btn btn-primary">Acceder</a>
            </div>
          </div>
        </div>
      </section>
      <section class="info-general py-2">
        <div class="container">
          <div class="card">
            <div class="card-header">
              <h3 class="text-primary" id="info_general">
                <%- info_general.titulo %>
              </h3>
            </div>
            <div class="card-body">
              <p class="text-start"><%- info_general.descripcion %></p>
            </div>
          </div>
        </div>
      </section>
    </main>

    <div id="footer"></div>

    <script src="/js/navbar.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
