<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <link rel="icon" href="rsc/favicon.ico" type="image/x-icon" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <title><%- pageTitle %></title>
    <meta
      name="description"
      content="El Laboratorio de Agua y Suelos del Departamento del Agua ofrece análisis especializados en calidad de agua y suelos, apoyando la investigación y la comunidad." />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous" />
    <link rel="stylesheet" href="/css/style.css" />
  </head>
  <body>
    <header>
      <nav class="navbar navbar-expand-lg fixed-top shadow" id="nav"></nav>
    </header>

    <main role="main" class="pb-5 mt-5">
      <div style="height: 4vh"></div>
      <div class="text-center p-4 mt-5">
        <h2><%- (titulo) %></h2>
        <h6><%- (subtitulo) %></h6>
      </div>
      <br />
      <div class="container">
        <div class="row">
          <div class="col">
            <% contenido.forEach(seccion => { %>
            <div class="mb-4"><%- (seccion) %></div>
            <% }); %>
          </div>
        </div>
      </div>
      <!-- Secciones Expansibles (Acordeón) -->
      <section class="secciones-expansibles py-2">
        <div class="container">
          <ul class="accordion list-group" id="secciones_lista">
            <% secciones.forEach(seccion => { %>
            <li class="accordion-item list-group-item p-0 m-0">
              <div class="accordion-header">
                <button
                  class="accordion-button bg-light"
                  type="button"
                  data-bs-toggle="collapse"
                  data-bs-target="#<%- seccion.id %>">
                  <h4 class="text-primary"><%- seccion.titulo %></h4>
                </button>
              </div>
              <div
                id="<%- seccion.id %>"
                class="accordion-collapse collapse"
                data-bs-parent="#secciones_lista">
                <div class="accordion-body">
                  <%- seccion.contenido %> <% if (seccion.enlaces) { %>
                  <hr />
                  <div class="dropdown">
                    <button
                      class="btn btn-primary dropdown-toggle"
                      type="button"
                      data-bs-toggle="dropdown">
                      Más Información
                    </button>
                    <ul class="dropdown-menu">
                      <% seccion.enlaces.forEach(enlace => { %>
                      <li>
                        <a class="dropdown-item" href="<%- enlace.url %>"
                          ><%- enlace.texto %></a
                        >
                      </li>
                      <% }); %>
                    </ul>
                  </div>
                  <% } %>
                </div>
              </div>
            </li>
            <% }); %>
          </ul>
        </div>
      </section>
    </main>

    <div id="footer"></div>
  </body>
  <script>
    localStorage.setItem("activeNavItem", "lab_aguas");
  </script>
  <script src="/js/navbar.js"></script>
  <script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
    crossorigin="anonymous"></script>
</html>
